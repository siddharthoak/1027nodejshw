#!/bin/bash

echo "@@@@@@@@@@@@@@@@@@@@@   Making pre-invocation changes...  @@@@@@@@@@@@@@@@@@@@@@@@@@"
rc=$?
if [ $rc -eq 0 ]; then

echo "@@@@@@@@@@@@@@@@@@@@@   Making post-invocation changes...  @@@@@@@@@@@@@@@@@@@@@@@@@@"

DATE=`date "+%b %d, %Y @ %H:%M %p"`

echo "---> Update index page"
echo "Page built on $DATE" >> ./index.js

else
echo "Error: assemble failed!"
fi
exit $rc